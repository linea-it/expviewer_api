version: "3"

services:
  app:
    user: 0:0
    build: .
    working_dir: /app/
    command: sh start.sh
    environment:
      - UPDATE_TIME=1000
      - LOAD_TIME=0.01
      - IMAGEDIR=/app/exposures
      - WATCHERDIR=/app/exposures/watcherdir
      - APP_PORT=5678
      - LOGLEVEL=debug
    ports:
      - 5678:5678
    volumes:
      - .:/app
      - ./exposures:/app/exposures

